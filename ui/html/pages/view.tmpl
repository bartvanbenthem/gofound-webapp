{{define "title"}}BlogPost #{{.BlogPost.ID}}{{end}}

{{define "main"}}
    <div class="container">
        <div class="row">
            <div class="col-xs-1" align="center">
                {{with .BlogPost}}
                <div class='blogpost'>
                    <div class='metadata'>
                        <strong>{{.Title}}</strong>
                        <span>#{{.ID}}</span>
                         <span>{{.Author}}</span>
                    </div>
                    <pre><code>{{.Content}}</code></pre>
                    <div class='metadata'>
                        <!-- Use the new template function here -->
                        <time>Created: {{humanDate .Created}}</time>
                    </div>
                </div>
                {{end}}
            </div>
        </div>
    </div>
{{end}}
